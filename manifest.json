{
  "manifest_version": 2,

  "name": "Secure Browsing",
  "description": "This extension provides organized and encrypted site history for a better browsing experience.",
  "version": "1.0",

  "browser_action":
  {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background":
  {
    "scripts": ["storage.js", "background.js"],
    "persistent": false
  },

  "content_scripts":
  [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "permissions":
  [
    "history",
    "tabs",
    "storage",
    "unlimitedStorage",
    "<all_urls>"
  ],

  "web_accessible_resources": ["fetch.js", "storage.js"],
  "incognito": "split"
}